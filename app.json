{
  "id": "nl.bevlogenheid.countdown",
  "name": {
    "en": "CountDown"
  },
  "version": "2.0.3",
  "compatibility": ">=1.5.0",
  "sdk": 2,
  "description": {
    "en": "Use CountDown timers to control your flows",
    "nl": "Gebruik CountDown timers als zandloper om af te tellen naar een actie in een flow"
  },
  "author": {
    "name": "Ralf van Dooren",
    "email": "ralfvd@gmail.com"
  },
  "contributing": {
    "donate": {
      "paypal": {
        "username": "ralfvd"
      }
    }
  },
  "images": {
    "large": "./assets/images/large.jpg",
    "small": "./assets/images/small.jpg"
  },
  "category": [
    "tools"
  ],
  "dependencies": {},
  "flow": {
    "triggers": [
      {
        "id": "countdown_to_zero",
        "title": {
          "en": "Timer reaches zero (0)",
          "nl": "Zandloper leeg"
        },
        "token": [
          {
            "name": "variable",
            "title": {
              "en": "Name timer",
              "nl": "Naam zandloper"
            }
          }
        ],
        "args": [
          {
            "name": "variable",
            "type": "autocomplete",
            "placeholder": {
              "en": "Countdown timer name",
              "nl": "Zandloper naam"
            }
          }
        ]
      },
      {
        "id": "countdown_started",
        "title": {
          "en": "Timer has started",
          "nl": "Zandloper is gestart"
        },
        "token": [
          {
            "name": "variable",
            "title": {
              "en": "Name timer",
              "nl": "Naam zandloper"
            }
          }
        ],
        "args": [
          {
            "name": "variable",
            "type": "autocomplete",
            "placeholder": {
              "en": "Countdown timer name",
              "nl": "Zandloper naam"
            }
          }
        ]
      },
      {
        "id": "countdown_stopped",
        "title": {
          "en": "Timer has stopped",
          "nl": "Zandloper is gestopt"
        },
        "token": [
          {
            "name": "variable",
            "title": {
              "en": "Name timer",
              "nl": "Naam zandloper"
            }
          }
        ],
        "args": [
          {
            "name": "variable",
            "type": "autocomplete",
            "placeholder": {
              "en": "Countdown timer name",
              "nl": "Zandloper naam"
            }
          }
        ]
      },
      {
        "id": "countdown_timer_changed",
        "title": {
          "en": "Timer value has changed",
          "nl": "Zandloper waarde is veranderd"
        },
        "token": [
          {
            "name": "variable",
            "type": "string",
            "title": {
              "en": "name timer",
              "nl": "naam zandloper"
            }
          },
          {
            "name": "value",
            "type": "string",
            "title": {
              "en": "value",
              "nl": "waarde"
            }
          }
        ],
        "args": [
          {
            "name": "variable",
            "type": "autocomplete",
            "placeholder": {
              "en": "Countdown timer name",
              "nl": "Zandloper naam"
            }
          }
        ]
      }
    ],
    "conditions": [
      {
        "id": "timer_running",
        "title": {
          "en": "Timer !{{not|}} running",
          "nl": "Zandloper loopt !{{niet|}}"
        },
        "args": [
          {
            "name": "variable",
            "type": "autocomplete",
            "placeholder": {
              "en": "CountDown name",
              "nl": "Zandloper naam"
            }
          }
        ]
      },
      {
        "id": "timer_matches_number",
        "title": {
          "en": "!{{CountDown is exact|Countdown is not exactly}}",
          "nl": "!{{Zandloper is precies|Zandloper is ongelijk aan}}"
        },
        "args": [
          {
            "name": "variable",
            "type": "autocomplete",
            "placeholder": {
              "en": "CountDown name",
              "nl": "Zandloper naam"
            }
          },
          {
            "name": "value",
            "type": "number",
            "placeholder": {
              "en": "value",
              "nl": "waarde"
            }
          }
        ]
      },
      {
        "id": "timer_less_than_number",
        "title": {
          "en": "!{{CountDown is less than|Countdown is not less than}}",
          "nl": "!{{Zandloper is kleiner dan|Zandloper is niet kleiner dan}}"
        },
        "args": [
          {
            "name": "variable",
            "type": "autocomplete",
            "placeholder": {
              "en": "CountDown name",
              "nl": "Zandloper naam"
            }
          },
          {
            "name": "value",
            "type": "number",
            "placeholder": {
              "en": "value",
              "nl": "waarde"
            }
          }
        ]
      },
      {
        "id": "timer_greater_than_number",
        "title": {
          "en": "!{{CountDown is greater than|Countdown is not greater than}}",
          "nl": "!{{Zandloper is groter dan|Zandloper is niet groter dan}}"
        },
        "args": [
          {
            "name": "variable",
            "type": "autocomplete",
            "placeholder": {
              "en": "CountDown name",
              "nl": "Zandloper naam"
            }
          },
          {
            "name": "value",
            "type": "number",
            "placeholder": {
              "en": "value",
              "nl": "waarde"
            }
          }
        ]
      }

    ],
    "actions": [
      {
        "id": "set_countdown_timer",
        "title": {
          "en": "Start countdown timer",
          "nl": "Draai zandloper om"
        },
        "args": [
          {
            "name": "variable",
            "type": "autocomplete",
            "placeholder": {
              "en": "name",
              "nl": "naam"
            }
          },
          {
            "name": "value",
            "type": "text",
            "placeholder": {
              "en": "seconds",
              "nl": "seconden"
            }
          }
        ]
      },
      {
        "id": "set_random_countdown_timer",
        "title": {
          "en": "start random CountDown",
          "nl": "Zandloper met willekeurige eindtijd"
        },
        "args": [
          {
            "name": "variable",
            "type": "autocomplete",
            "placeholder": {
              "en": "name",
              "nl": "naam"
            }
          },
          {
            "name": "valuemin",
            "type": "text",
            "placeholder": {
              "en": "min. seconds",
              "nl": "min. seconden"
            }
          },
          {
            "name": "valuemax",
            "type": "text",
            "placeholder": {
              "en": "max. seconds",
              "nl": "max. seconden"
            }
          }
        ]
      },
      {
        "id": "adjust_countdown_timer",
        "title": {
          "en": "Adjust countdown timer",
          "nl": "Pas zandloper aan"
        },
        "args": [
          {
            "name": "variable",
            "type": "autocomplete",
            "placeholder": {
              "en": "name",
              "nl": "naam"
            }
          },
          {
            "name": "value",
            "type": "text",
            "placeholder": {
              "en": "seconds",
              "nl": "seconden"
            }
          }
        ]
      },
      {
        "id": "stop_countdown_timer",
        "title": {
          "en": "Stop countdown timer"
        },
        "args": [
          {
            "name": "variable",
            "type": "autocomplete",
            "placeholder": {
              "en": "name",
              "nl": "naam"
            }
          }
        ]
      },
      {
        "id": "stop_all_countdown_timers",
        "title": {
          "en": "Stop all countdown timers",
          "nl": "Stop alle zandlopers"
        }
      }
    ]
  }
}
