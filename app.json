{
  "id": "nl.bevlogenheid.countdown",
  "name": {
    "en": "CountDown"
  },
  "version": "2.0.3",
  "compatibility": ">=1.5.0",
  "sdk": 2,
  "description": {
    "en": "Use CountDown timers to control your flows",
    "nl": "Gebruik CountDown timers als zandloper om af te tellen naar een actie in een flow",
    "de": "Verwende CountDown-Timer, um deine Flows zu steuern."
  },
  "author": {
    "name": "Ralf van Dooren",
    "email": "ralfvd@gmail.com"
  },
  "contributing": {
    "donate": {
      "paypal": {
        "username": "ralfvd"
      }
    }
  },
  "images": {
    "large": "./assets/images/large.jpg",
    "small": "./assets/images/small.jpg"
  },
  "category": [
    "tools"
  ],
  "dependencies": {},
  "flow": {
    "triggers": [
      {
        "id": "countdown_to_zero",
        "title": {
          "en": "Timer reaches zero (0)",
          "nl": "Zandloper leeg",
          "de": "Timer erreicht Null (0)"
        },
        "token": [
          {
            "name": "variable",
            "title": {
              "en": "Name timer",
              "nl": "Naam zandloper",
              "de": "Timer-Name"
            }
          }
        ],
        "args": [
          {
            "name": "variable",
            "type": "autocomplete",
            "placeholder": {
              "en": "Countdown timer name",
              "nl": "Zandloper naam",
              "de": "Countdown-Timer Name"
            }
          }
        ]
      },
      {
        "id": "countdown_started",
        "title": {
          "en": "Timer has started",
          "nl": "Zandloper is gestart",
          "de": "Timer wurde gestartet"
        },
        "token": [
          {
            "name": "variable",
            "title": {
              "en": "Name timer",
              "nl": "Naam zandloper",
              "de": "Timer-Name"
            }
          }
        ],
        "args": [
          {
            "name": "variable",
            "type": "autocomplete",
            "placeholder": {
              "en": "Countdown timer name",
              "nl": "Zandloper naam",
              "de": "Countdown-Timer Name"
            }
          }
        ]
      },
      {
        "id": "countdown_stopped",
        "title": {
          "en": "Timer has stopped",
          "nl": "Zandloper is gestopt",
          "de": "Timer wurde gestoppt",
        },
        "token": [
          {
            "name": "variable",
            "title": {
              "en": "Name timer",
              "nl": "Naam zandloper",
              "de": "Timer-Name"
            }
          }
        ],
        "args": [
          {
            "name": "variable",
            "type": "autocomplete",
            "placeholder": {
              "en": "Countdown timer name",
              "nl": "Zandloper naam",
              "de": "Countdown-Timer Name"
            }
          }
        ]
      },
      {
        "id": "countdown_timer_changed",
        "title": {
          "en": "Timer value has changed",
          "nl": "Zandloper waarde is veranderd",
          "de": "Timer Wert hat sich verändert"
        },
        "token": [
          {
            "name": "variable",
            "type": "string",
            "title": {
              "en": "name timer",
              "nl": "naam zandloper",
              "de": "Timer-Name"
            }
          },
          {
            "name": "value",
            "type": "string",
            "title": {
              "en": "value",
              "nl": "waarde",
              "de": "Wert"
            }
          }
        ],
        "args": [
          {
            "name": "variable",
            "type": "autocomplete",
            "placeholder": {
              "en": "Countdown timer name",
              "nl": "Zandloper naam",
              "de": "Countdown-Timer Name"
            }
          }
        ]
      }
    ],
    "conditions": [
      {
        "id": "timer_running",
        "title": {
          "en": "Timer !{{not|}} running",
          "nl": "Zandloper loopt !{{niet|}}",
          "de": "Timer läuft !{{nicht|}}"
        },
        "args": [
          {
            "name": "variable",
            "type": "autocomplete",
            "placeholder": {
              "en": "CountDown name",
              "nl": "Zandloper naam",
              "de": "CountDown Name"
            }
          }
        ]
      },
      {
        "id": "timer_matches_number",
        "title": {
          "en": "!{{CountDown is exact|Countdown is not exactly}}",
          "nl": "!{{Zandloper is precies|Zandloper is ongelijk aan}}",
          "en": "!{{CountDown ist genau|Der Countdown ist nicht genau}}",
        },
        "args": [
          {
            "name": "variable",
            "type": "autocomplete",
            "placeholder": {
              "en": "CountDown name",
              "nl": "Zandloper naam",
              "de": "CountDown Name"
            }
          },
          {
            "name": "value",
            "type": "number",
            "placeholder": {
              "en": "value",
              "nl": "waarde",
              "de": "Wert"
            }
          }
        ]
      },
      {
        "id": "timer_less_than_number",
        "title": {
          "en": "!{{CountDown is less than|Countdown is not less than}}",
          "nl": "!{{Zandloper is kleiner dan|Zandloper is niet kleiner dan}}",
          "de": "!{{CountDown ist kleiner als|CountDown ist nicht kleiner als}}"
        },
        "args": [
          {
            "name": "variable",
            "type": "autocomplete",
            "placeholder": {
              "en": "CountDown name",
              "nl": "Zandloper naam",
              "de": "CountDown Name"
            }
          },
          {
            "name": "value",
            "type": "number",
            "placeholder": {
              "en": "value",
              "nl": "waarde",
              "de": "Wert"
            }
          }
        ]
      },
      {
        "id": "timer_greater_than_number",
        "title": {
          "en": "!{{CountDown is greater than|Countdown is not greater than}}",
          "nl": "!{{Zandloper is groter dan|Zandloper is niet groter dan}}",
          "de": "!{{CountDown ist größer als|CountDown ist nicht größer als}}"
        },
        "args": [
          {
            "name": "variable",
            "type": "autocomplete",
            "placeholder": {
              "en": "CountDown name",
              "nl": "Zandloper naam",
              "de": "CountDown Name",
            }
          },
          {
            "name": "value",
            "type": "number",
            "placeholder": {
              "en": "value",
              "nl": "waarde",
              "de": "Wert"
            }
          }
        ]
      }

    ],
    "actions": [
      {
        "id": "set_countdown_timer",
        "title": {
          "en": "Start countdown timer",
          "nl": "Draai zandloper om",
          "de": "Starte Countdown Timer"
        },
        "args": [
          {
            "name": "variable",
            "type": "autocomplete",
            "placeholder": {
              "en": "name",
              "nl": "naam",
              "de": "Name"
            }
          },
          {
            "name": "value",
            "type": "text",
            "placeholder": {
              "en": "seconds",
              "nl": "seconden",
              "de": "Sekunden"
            }
          }
        ]
      },
      {
        "id": "set_random_countdown_timer",
        "title": {
          "en": "start random CountDown",
          "nl": "Zandloper met willekeurige eindtijd",
          "de": "Starte Zufalls CountDown"
        },
        "args": [
          {
            "name": "variable",
            "type": "autocomplete",
            "placeholder": {
              "en": "name",
              "nl": "naam",
              "de": "Name"
            }
          },
          {
            "name": "valuemin",
            "type": "text",
            "placeholder": {
              "en": "min. seconds",
              "nl": "min. seconden",
              "de": "min. Sekunden"
            }
          },
          {
            "name": "valuemax",
            "type": "text",
            "placeholder": {
              "en": "max. seconds",
              "nl": "max. seconden",
              "de": "max. Sekunden"
            }
          }
        ]
      },
      {
        "id": "adjust_countdown_timer",
        "title": {
          "en": "Adjust countdown timer",
          "nl": "Pas zandloper aan",
          "de": "Countdown-Timer anpassen"
        },
        "args": [
          {
            "name": "variable",
            "type": "autocomplete",
            "placeholder": {
              "en": "name",
              "nl": "naam",
              "de": "Name"
            }
          },
          {
            "name": "value",
            "type": "text",
            "placeholder": {
              "en": "seconds",
              "nl": "seconden",
              "de": "Sekunden"
            }
          }
        ]
      },
      {
        "id": "stop_countdown_timer",
        "title": {
          "en": "Stop countdown timer",
          "de": "Stoppe Countdown-Timer"
        },
        "args": [
          {
            "name": "variable",
            "type": "autocomplete",
            "placeholder": {
              "en": "name",
              "nl": "naam",
              "de": "Name"
            }
          }
        ]
      },
      {
        "id": "stop_all_countdown_timers",
        "title": {
          "en": "Stop all countdown timers",
          "nl": "Stop alle zandlopers",
          "de": "Stoppe alle Countdown-Timer"
        }
      }
    ]
  }
}
